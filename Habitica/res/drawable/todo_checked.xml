<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <corners android:radius="@dimen/daily_checkbox_corner_radius" />
            <solid android:color="@color/checkbox_checked_fill" />
            <stroke
                android:width="1dp"
                android:color="@color/checkbox_stroke" />
            <size
                android:width="@dimen/checkbox_size"
                android:height="@dimen/checkbox_size" />
            <padding
                android:bottom="0dip"
                android:left="0dip"
                android:right="0dip"
                android:top="0dip" />
        </shape>
    </item>
    <item>
        <bitmap
            android:gravity="center"
            android:src="@drawable/ic_check" />
    </item>
</layer-list>
